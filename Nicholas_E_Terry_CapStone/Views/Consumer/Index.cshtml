@model IEnumerable<Nicholas_E_Terry_CapStone.Models.CleanArticle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>*@
<!-- The sidebar -->
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    @*<button type="button" class="btn btn-primary btn-lg btn-block">Upgrade To Contributor Level</button>*@
    <a asp-controller="Contributor" asp-action="Create">Upgrade To Contributor Level</a>
    <a asp-controller="Consumer" asp-action="BreakingNews">BREAKING NEWS !</a>
    @*<a href="#">Placeholder</a>
    <a href="#">placeholder</a>
    <a href="#">ABOUT</a>*@
</div>
<!-- Use any element to open the sidenav -->
<button type="button" class="btn btn-outline-primary" onclick="openNav()">&#9776;</button>
<!-- Add all page content inside this div if you want the side nav to push page content to the right (not used if you only want the sidenav to sit on top of the page -->
<div id="main">
    @foreach (var item in Model)
    {
        <div class="container">
            <div class="navbar">
                <a href="#" onclick="upVote()">
                    <div class="box-img">
                        <img src="~/images/vote.png" height="25" width="25" />
                        <br />
                        <div id="updateThis">vote</div>
                    </div>
                </a>
                @foreach (var article in (List<int>)ViewBag.articleList)
                {
                    @for (int i = 0; i < ViewBag.articleList.Count; i++)
                    {
                        if (item.Id == article)
                        {
                            <a href="#news">@ViewBag.userName[i] </a>
                        }
                    }

                }
            </div>
        </div>
        <div class="jumbotron">
            <p class="lead">@item.Lead_paragraph</p>
            <details>
                <summary>Click To Read Article</summary>
                <p @*class="lead"*@>@item.Word_count</p>
            </details>
            <hr class="my-4">
            @*<p class="lead">
                <a class="btn btn-primary btn-lg" href=@item.Web_url role="button">Read Article</a>
            </p>*@
        </div>
        <div>
            <div class="form-group">
                <label for="suggestions">Article Suggestions</label>
                <textarea asp-for="@item.Comment" class="form-control" id="suggestions" rows="3"></textarea>
            </div>
            <div onclick="clear()" class="form-group">
                <a href="#" onclick="clear()" class="btn btn-primary">Submit Suggestion</a>
            </div>
        </div>
        
    }
</div>

