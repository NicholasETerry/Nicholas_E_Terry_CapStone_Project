@model IEnumerable<Nicholas_E_Terry_CapStone.Models.CleanArticle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <div class="container">
        <div class="jumbotron">
            <p class="lead">@item.Lead_paragraph</p>
            <hr class="my-4">
            <p class="lead">
                <a class="btn btn-primary btn-lg" href=@item.Web_url role="button">Read Article</a>
            </p>
        </div>
    </div>
}






