<!-- The sidebar -->
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    @*<button type="button" class="btn btn-primary btn-lg btn-block">Upgrade To Contributor Level</button>*@
