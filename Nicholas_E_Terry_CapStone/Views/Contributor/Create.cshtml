@model Nicholas_E_Terry_CapStone.Models.UserModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>UserModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="First_name" class="control-label"></label>
                <input asp-for="First_name" class="form-control" />
                <span asp-validation-for="First_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Last_name" class="control-label"></label>
                <input asp-for="Last_name" class="form-control" />
                <span asp-validation-for="Last_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Education.Highest_level" class="control-label"></label>
                <input asp-for="Education.Highest_level" class="form-control" />
                <span asp-validation-for="Education.Highest_level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Occupation.Occupation_user" class="control-label"></label>
                <input asp-for="Occupation.Occupation_user" class="form-control" />
                <span asp-validation-for="Occupation.Occupation_user" class="text-danger"></span>
            </div>
            <div>
                @foreach (var item in (List<string>)ViewData["SkillLibrary"])

                {
                    <button type="button" class="btn btn-outline-primary">@item</button>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
