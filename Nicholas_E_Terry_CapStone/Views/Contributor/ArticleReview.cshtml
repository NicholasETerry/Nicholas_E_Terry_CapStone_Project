<!-- The sidebar -->
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

    <a href="#">BREAKING NEWS!</a>
    <a href="#">REVIEW ARTICLES</a>
    <a href="#">placeholder</a>
    <a href="#">ABOUT</a>
</div>
<!-- Use any element to open the sidenav -->
<button type="button" class="btn btn-outline-primary" onclick="openNav()">&#9776;</button>
<!-- Add all page content inside this div if you want the side nav to push page content to the right (not used if you only want the sidenav to sit on top of the page -->
<div id="main">
    <div class="container">
        <div class="navbar">
            <a onlick="updateVote()" href="#home">Votes</a>
            <a href="#news">contributor userName that reviewed article</a>
        </div>
        <div class="jumbotron">
            <p class="lead">@Model.Lead_paragraph</p>
            <details>
                <summary>Click To Read Article</summary>
                <p @*class="lead"*@>@Model.Word_count</p>
            </details>
            <hr class="my-4">
        </div>
        <select asp-for="ArticleTags" multiple="multiple">
            @foreach (var item in (List<string>)ViewBag.TagLibrary)
            {
                <option value="@item">@item</option>
            }
        </select>
        <form asp-for="@Model.ConsumerComment">
            <label for="Suggestions">Suggestions:</label>
            <textarea id="Suggestions" name="Suggestions" rows="4" cols="50">
                          Input Article Suggestions Here
                         </textarea>
            <br><br>
            <input type="submit" value="Submit">
        </form>
    </div>
</div>

